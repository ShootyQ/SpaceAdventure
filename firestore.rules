rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /missions/{missionId} {
      allow read, write: if request.auth != null;
    }
    match /behaviors/{behaviorId} {
      allow read, write: if request.auth != null;
    }
    match /planets/{planetId} {
      allow read, write: if request.auth != null;
    }
    match /game-config/{configId} {
      allow read, write: if request.auth != null;
    }
    match /ships/{shipId} {
      allow read, write: if request.auth != null;
    }
  }
}
